<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_HaveFun"
        android:text="@string/btnHaveFun"
        android:layout_width="200dp"
        style="@style/Button"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_DoSomething"
        android:text="@string/btnDoSomething"
        android:layout_width="200dp"
        style="@style/Button"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_ClickHere"
        android:text="@string/btnClickHere"
        android:layout_width="200dp"
        style="@style/Button"
        android:layout_height="wrap_content" />
    <Button
        style="@style/Button"
        android:id="@+id/btn_Surprise"
        android:text="@string/btnSurprise"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

</LinearLayout>